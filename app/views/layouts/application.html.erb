<!DOCTYPE html>
<html>
  <head>
    <title>EmergencyFood</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <header>
        <div class="logo">
          <%= image_tag('food_cup_ra-men_open.png', :size => '70x70',:class => 'logo_img') %>
          <%= link_to "非常食部","/menu/index", class: "logo_text" %>

          <% if @current_user %>
            <span class="menu_link">
              <%= "ログイン：#{@current_user.name}" %>  
              <%= link_to("入出金履歴","/money/index") %>
              <%= link_to("買い出し管理","/money/new") %>
              <%= link_to("徴収管理","/collect/index") %>
              <%= link_to("顧客情報管理","/user/info") %>
              <%= link_to("要望管理","/hope/index") %>
              <%= link_to("管理者登録/編集","/admin/index") %>
              <%= link_to "ログアウト","/admin/logout", method: "POST" ,class: "logout" %>
            </span>
          <% end %>
        </div>
    </header>

    <main>  
      <% if flash[:notice] %>
        <div class="flash">
            <%= flash[:notice] %>
        </div>
      <% end %>

      <%= yield %>
    </main> 

    <footer>
      <% if @current_user %>
        <div class="back_btn">
          <input type="button" onclick="history.back()" value="戻る">
        </div>
      <% end %>
    </footer>

  </body>

</html>
