<div class="contents">
	<div class="state_table">
		<div class="head_text"><span>要望管理</span></div>
		<table>
			<tr>
				<th>ユーザーID</th>
				<th>要望</th>
				<th>編集</th>
				<th>破棄</th>
			</tr>

			<% for hope in @hope do %>
				<%= form_tag("/hope/#{hope.id}/edit") do %>
					<tr>
						<td><%= hope.user_id %></td>
						<td><%= hope.contents %></td>
						<td class="edit_btn"><input type="submit" name="fixed" value="編集"></td>
						<td class="edit_btn"><input type="submit" name="complete" value="破棄"></td>				
					</tr>
				<% end %>
			<% end %>
		</table>

		<%= form_tag("/hope/new") do %>
			<div class="create_btn"><input type="submit" name="create" value="新規登録"></div>
		<% end %>

	</div>
</div>