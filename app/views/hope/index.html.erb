<div class="contents">
	<div class="head_text"><span>要望管理</span></div>
	<%= form_tag("/hope/new") do %>
		<div class="create_btn"><input type="submit" name="create" value="新規登録"></div>
	<% end %>
	<div class="state_table table_scroll">
		<table class="hope_table">
			<tr>
				<th>ユーザーID</th>
				<th class="hope_data">要望</th>
			</tr>

			<% for hope in @hope do %>
				<tr data-href="<%= "/hope/#{hope.id}/edit" %>" class="data-tr">
					<%= form_tag("/hope/#{hope.id}/edit") do %>
					<td><%= hope.user_id %></td>
					<td class="hope_data"><%= hope.contents %></td>
					<% end %>		
				</tr>
			<% end %>
		</table>
	</div>
	
</div>